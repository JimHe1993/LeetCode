class Solution:
    def reverseString(self, s):
        """
        :type s: str
        :rtype: str
        """
        if not s:
            return s
        len_s = len(s)
        s_list = list(s)
        # i = 0
        # j = len(s)-1
        # while i < j:
        #     s_list[i], s_list[j] = s_list[j], s_list[i]
        # return ''.join(s_list) # 超时了
        
        for i in range(0, len_s//2):
            s_list[i], s_list[len_s-i-1] = s_list[len_s-i-1], s_list[i]
        return ''.join(s_list)
