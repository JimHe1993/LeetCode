class Solution:
    def threeSum(self, nums):
        """
        :type nums: List[int]
        :rtype: List[List[int]]
        """
        res = []
        if not nums:
            return res
        ss = sorted(nums)
        # print(ss)
        i = 0
        while i < len(ss):
            if ss[i] > 0:
                break
            if i > 0 and ss[i] == ss[i-1]:
                i += 1
                continue
            target = 0 - ss[i]
            l = i+1
            r = len(ss) - 1
            while l < r:
                if ss[l] + ss[r] == target:
                    res.append([ss[i], ss[l], ss[r]])
                    while l < r and ss[l] == ss[l + 1]:
                        l += 1
                    while l < r and ss[r] == ss[r - 1]:
                        r -= 1
                    l += 1
                    r -= 1
                elif ss[l] + ss[r] < target:
                    l += 1
                else:
                    r -= 1
            i += 1
        return res
